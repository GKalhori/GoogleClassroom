<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".joinClass">

    <include
        android:id="@+id/toolbarjoin"
        layout="@layout/toolbarjoin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/md_light_green_700"
        android:textDirection="ltr"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="-3dp" />

    <TextView
        android:id="@+id/getClassCode"
        android:layout_width="456dp"
        android:layout_height="38dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="550dp"
        android:text="Ask your teacher for the class code, then enter it here."
        android:textColor="#030000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:layout_marginBottom="445dp"
        android:ems="10"
        android:hint="Class code"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#B4464242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="-301dp"
        tools:layout_editor_absoluteY="-127dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="123dp"
        android:layout_height="41dp"
        android:background="#008D6161"
        android:text="Join class"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_close"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="25dp" />

</android.support.constraint.ConstraintLayout>