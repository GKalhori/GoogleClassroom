<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpPage">

    <EditText
        android:id="@+id/Register_UserName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="315dp"
        android:autofillHints=""
        android:background="#8B673AB7"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Register_Password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="259dp"
        android:autofillHints=""
        android:background="#8B673AB7"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Confirm_Password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="359dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="204dp"
        android:background="#8B673AB7"
        android:ems="10"
        android:hint="@string/confirm_your_password"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Register_Button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="106dp"
        android:layout_height="50dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="431dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="122dp"
        android:background="#0E1747"
        android:fontFamily="serif"
        android:text="@string/register"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#8BC34A"
        android:textColorHighlight="#00AA2D2D"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginStart="138dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="441dp"
        android:contentDescription="@string/todo"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <Button
        android:id="@+id/getImage_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="94dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="383dp"
        android:text="@string/select_or_capture_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>